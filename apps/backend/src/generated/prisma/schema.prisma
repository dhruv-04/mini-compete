generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  participant
  organizer
}

model User {
  userId   String   @id @default(uuid())
  email    String   @unique
  name     String
  password String
  role     UserRole
}

model Competitions {
  competitionId String   @id
  title         String
  description   String
  tags          String[]
  capacity      Int
  regDeadLine   DateTime
}

model Registrations {
  registrationID String @id
  userId         String
  competitionId  String

  @@unique([userId, competitionId])
}
